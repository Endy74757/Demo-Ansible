global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind *:{{ haproxy_port }}
    default_backend http_back

backend http_back
    balance roundrobin
    # --- Magic Loop เริ่มตรงนี้ ---
    # วนลูปหา host ทุกตัวที่อยู่ในกลุ่ม 'webservers'
    {% for host in groups['webservers'] %}
    # ดึง IP (ansible_host) ของเครื่องนั้นๆ มาใส่
    server {{ host }} {{ hostvars[host]['ansible_host'] }}:{{ webservers_port }} check
    {% endfor %}
    # --- Magic Loop จบตรงนี้ ---